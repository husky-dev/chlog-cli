{
  "name": "chlog-cli",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jaroslav Khorishchenko <websnipter@gmail.com>",
  "license": "MIT",
  "bin": {
    "chlog": "./dist/index.js"
  },
  "scripts": {
    "dist": "tsc",
    "link": "yarn global add file:$PWD",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:types": "tsc --noEmit --skipLibCheck",
    "lint:eslint": "eslint \"src/**\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "{*.ts,*tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "minimist": "1.2.5"
  },
  "devDependencies": {
    "@types/minimist": "1.2.1",
    "@types/node": "14.14.37",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "eslint": "7.23.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "typescript": "4.2.3"
  }
}
